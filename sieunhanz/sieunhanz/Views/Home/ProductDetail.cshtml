@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}
@model Hang


<!-- End All Title Box -->
<!-- Start Shop Detail  -->
<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active"> <img class="d-block w-100" src="../ProductsImages/@Model.AnhDaiDien" alt=""> </div>
                    </div>
                    <ol class="carousel-indicators">
                        @foreach (var item in ViewBag.lstAnh)
                        {
                            <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                                <img class="d-block w-100 img-fluid" style="height:80px; width:80px;" src="../ProductsImages/" alt=""/>
                            </li>
                        }
                    </ol>
                </div>
            </div>
            <div class="col-xl-7 col-lg-7 col-md-6">
                <div class="single-product-details">
                    <h2>@Model.TenHang</h2>
                    <h5> $@Model.DonGiaBan</h5>
                    @if (Model.Slton == 0)
                    {
                        <h3>Hàng Đã Hết</h3>
                    }
                    else
                    {
                        <h3>Còn @Model.Slton</h3>
                    }
                        <h4>Short Description:</h4>
                    <p>
                        @Model.MoTa
                    </p>
                    <ul>
                        <li>
                            <div class="form-group quantity-box">
                                <label class="control-label">Quantity</label>
                                <input class="form-control" value="1" min="1" max="20" type="number">
                            </div>
                        </li>
                    </ul>

                    <div class="price-box-bar">
                        <div class="cart-and-bay-btn">
                            <button> 
                                <a class="btn btn-primary fw-bold py-3 w-100 shadow-0 rounded-0" style="cursor:pointer;color:darkred;" onclick="handleToAddToCart()" asp-action="GioHang">Mua Ngay</a>
                              </button>
                              <button class="btn btn-primary rounded-0 px-3">
                                <a class="btn btn-primary fw-bold py-3 w-100 shadow-0 rounded-0" style="cursor:pointer;color:darkred;" onclick="handleToAddToCart()">
                                    <i class="fas fa-shopping-cart"></i>
                                    Thêm Vào Giỏ
                                </a>
                        </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function handleToAddToCart() {
        let quantity = $("input[type='number']").val();
        console.log(quantity);
        let location = window.location.href;
        let productId = location.split("/").pop();
        if (productId == null || quantity == null) {
            return;
        }
        let cartPostUrl = `https://localhost:7223/api/cartapi?mahang=${productId}&quantity=${quantity}`;
        $.ajax({
            type: "POST",
            url: cartPostUrl,
            dataType: 'json',
            contentType: "application/json",
            success: () => {
                alert("Thêm vào giỏ hàng thành công");
            },
            Error: function (xhr) {
                alert(xhr.responseText)
            }
        });
    }
</script>