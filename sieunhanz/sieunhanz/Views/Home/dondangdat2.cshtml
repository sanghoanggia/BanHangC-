@model IEnumerable<sieunhanz.Models.DonDatUser1>

@{
    ViewData["Title"] = "dondangdat2";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}

<h1>Đơn Mua</h1>

<table class="table">
    <thead>
        <tr>
            <th>
               Họ tên
            </th>
            <th>
                Gmail 
            </th>
            <th>
               Ten Hàng
            </th>
            <th>
                Số Điện Thoại
            </th>
            <th>
                Trạng Thái
            </th>
            <th>
                Tổng Tiền
            </th>
            <th>
               Tên Tài Khoản
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sdt)
            </td>
                <td>
                    @if (item.TrangThai == 0)
                    {
                        <h3 style="color: yellow;">Đơn Hàng Đang Chờ</h3>
                    }
                    @if (item.TrangThai == 1)
                    {
                        <h3 style="color: green;">Đơn Hàng Đã Xử Lý</h3>
                    }
                    @if (item.TrangThai == 2)
                    {
                        <h3 style="color: pink;">Đơn Hàng Đang Giao</h3>
                    }
                    @if (item.TrangThai == 3)
                    {
                        <h3 style="color: red;">Đơn Hàng Đã Bị Hủy</h3>
                    }
                    @if (item.TrangThai != 0 && item.TrangThai != 1 && item.TrangThai != 1 && item.TrangThai != 3)
                    {
                        <h3 style="color: gray;"> Đơn hàng không xác định</h3>
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTaiKhoan)
            </td>
        </tr>
}
    </tbody>
</table>
