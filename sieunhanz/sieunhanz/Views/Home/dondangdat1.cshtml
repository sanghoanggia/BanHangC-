@using sieunhanz.Models
@using X.PagedList.Mvc.Core
@model IEnumerable<sieunhanz.Models.DonDatUser1>
@using Microsoft.EntityFrameworkCore;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "dondangdat";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}

<h1>Đơn Đặt Của Bạn</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Sản Phẩm
            </th>
            <th>
                Gmail
            </th>
            <th>
                Họ Tên
            </th>
            <th>
                Trạng Thái
            </th>
            <th>
                Tổng Tiền
            </th>
            <th>
                Tài Khoản
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sdt)
                </td>
                <td>
                    @if (@item.TrangThai == 0)
                    {
                        <h3>Đơn Hàng Đang Chờ</h3>
                    }
                    @if (@item.TrangThai == 1)
                    {
                        <h3>Đơn Hàng Đã Xử Lý</h3>
                    }
                    @if (@item.TrangThai == 2)
                    {                                          
                         <h3>Đơn Hàng Đã Bị Hủy</h3>
                    }
                    </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTaiKhoan)
            </td>

        </tr>
}
    </tbody>
</table>
